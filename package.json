{
  "name": "mai-copilot-vscode",
  "displayName": "MAI Copilot",
  "description": "MAI powered development for VS Code. Your AI, your rules.",
  "version": "0.1.0",
  "publisher": "JuanGCarmona",
  "icon": "resources/small-logo.png",
  "homepage": "https://jgcarmona.com",
  "repository": {
    "url": "https://github.com/juangcarmona/mai-copilot-vscode",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/juangcarmona/mai-copilot-vscode/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "AI"
  ],
  "keywords": [
    "code",
    "assistant",
    "ai",
    "development",
    "mai",
    "copilot"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mai.openConfigurationPanel",
        "title": "MAI: Open Configuration Panel"
      },
      {
        "command": "mai.logWorkspaceInfo",
        "title": "MAI: Log Workspace Info"
      },
      {
        "command": "mai.updatePanel",
        "title": "MAI: Update Panel"
      },
      {
        "command": "mai.afterInsert",
        "title": "MAI: Handle After Insert"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "maiCopilot",
          "title": "MAI",
          "icon": "resources/mai-copilot-icon.svg"
        }
      ]
    },
    "views": {
      "maiCopilot": [
        {
          "id": "maiView",
          "name": "MAI Panel"
        }
      ]
    },
    "configuration": [
      {
        "title": "MAI Copilot API Settings",
        "properties": {
          "mai.api.backend": {
            "type": "string",
            "default": "llm-studio",
            "enum": [
              "llm-studio",
              "mai-api",
              "tabby",
              "llama-cpp"
            ],
            "description": "The backend to use for MAI Copilot."
          },
          "mai.api.baseUrl": {
            "type": "string",
            "default": "http://127.0.0.1",
            "description": "Base URL of the MAI Copilot API."
          },
          "mai.api.port": {
            "type": "number",
            "default": 1234,
            "description": "Port number for the MAI Copilot API."
          },
          "mai.api.completionEndpoint": {
            "type": "string",
            "default": "/v1/completions/",
            "description": "Endpoint for the completion API."
          }
        }
      },
      {
        "title": "MAI Copilot Completion Settings",
        "properties": {
          "mai.model": {
            "type": "string",
            "default": "hf/deepseek-ai/deepseek-coder-6.7b-base",
            "description": "Default model used for generating completions. Choose from the supported models."
          },
          "mai.requestDelay": {
            "type": "number",
            "default": 500,
            "description": "Delay (in milliseconds) before sending API requests."
          },
          "mai.completion.maxTokens": {
            "type": "number",
            "default": 50,
            "description": "Maximum number of tokens to generate in completions."
          },
          "mai.completion.temperature": {
            "type": "number",
            "default": 0.7,
            "description": "Temperature parameter to control the randomness of completions."
          },
          "mai.completion.fimPrefix": {
            "type": "string",
            "default": "",
            "description": "Fill-in-the-Middle Prefix token."
          },
          "mai.completion.fimMiddle": {
            "type": "string",
            "default": "",
            "description": "Fill-in-the-Middle Middle token."
          },
          "mai.completion.fimSuffix": {
            "type": "string",
            "default": "",
            "description": "Fill-in-the-Middle Suffix token."
          }
        }
      },
      {
        "title": "MAI Copilot Logging Settings",
        "properties": {
          "mai.logging.level": {
            "type": "string",
            "default": "info",
            "enum": [
              "debug",
              "info",
              "warn",
              "error"
            ],
            "description": "Set the logging level for MAI Copilot."
          },
          "mai.logging.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable or disable logging."
          }
        }
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./tsconfig.test.json",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "@vscode/test-cli": "^0.0.10",
    "lru-cache": "^9.1.1",
    "minimatch": "^3.1.2",
    "undici": "^6.21.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.96.0",
    "@vscode/test-electron": "^2.4.1",
    "axios": "^1.7.9",
    "glob": "^11.0.0",
    "mocha": "^11.0.1",
    "typescript": "^5.7.3"
  }
}