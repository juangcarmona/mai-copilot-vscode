{
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#955bde",
        "activityBar.background": "#955bde",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#e4a97a",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#955bde",
        "statusBar.background": "#7a30d6",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#955bde",
        "statusBarItem.remoteBackground": "#7a30d6",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#7a30d6",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#7a30d699",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.remoteColor": "#7A30D6", // Mant√©n coherencia con la barra de actividad
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": "/usr/bin/zsh"
        }
    },
    "files.exclude": {
        "out": true, // set this to true to hide the "out" folder with the compiled JS files
        "dist": true, // set this to true to hide the "dist" folder with the compiled JS files
        "node_modules": true, // set this to false to show the "node_moduels" folder
        ".vscode-test": true, // set this to false to show the ".vscode-test" folder
        "src/**.js": true, // set this to false to include .js files within "src" folder in search results
        "src/**.map": true, // set this to false to include .map files within  "src" folder in search results
    },
    "search.exclude": {
        "out": true, // set this to false to include "out" folder in search results
        "dist": true // set this to false to include "dist" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off"
}